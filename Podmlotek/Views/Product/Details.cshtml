@model Podmlotek.Models.Products
@using Podmlotek.Infrastructure
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<main>
	<article>
		<section>
			<div class="content">
				<div class="picture">
					<img style="margin:auto;" src="@Url.PicturesPath(Model.Picture)" />
				</div>
				<div class="desc">
					<div class="title">
						<h1 class="h1">
							@Model.Item
						</h1>
						<div class="price">
							Cena: <span> @Model.Price zł</span>
						</div>
						<div>
							<a class="orderButton" href="@Url.Action("AddTo", "ShoppingCart", new { id = Model.ProductsId })">
								Dodaj do koszyka
							</a>
						</div>
					</div>
					<div id="description">
						<hr class="line" />

						@Model.Description
					</div>
				</div>
				
									
			</div>
		</section>
	</article>
</main>
