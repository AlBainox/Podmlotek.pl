@using Podmlotek.Infrastructure
<!DOCTYPE html>
<html lang="pl">
<head>

	<meta charset="utf-8">
	<title>@ViewBag.Title</title>
	<meta name="description" content="Internetowy sklep z aukcjami użytkowników">
	<meta name="keywords" content="sklep, sprzedaż, aukcje internetowe">
	<meta name="author" content="Albert Brząkała">

	<meta http-equiv="X-Ua-Compatible" content="IE=edge,chrome=1">

	<link rel="stylesheet" href="@Url.Content("~/Content/Content/main.css")">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700&amp;subset=latin-ext" rel="stylesheet">

	<!--[if lt IE 9]>
	<script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
	<![endif]-->

</head>

<body>
	<header>

		<div id="pasek">
			<a class="MainBtns" href="#"> Moje konto</a>
			<a class="MainBtns" href="@Url.Action("Logining", "Account")"> Zaloguj</a>
			<a class="MainBtns" href="#">Koszyk</a>
		</div>
		<div>
			<a style="text-decoration:none" href="@Url.Action("Index","Home")">
				<h1 class="logo">Podmlotek.pl - serwis aukcyjny</h1>
			</a>
		</div>
		@Html.Action("Categories", "Home")

	</header>

	<div>
		@RenderBody()
	</div>

	<footer>
		<div id="footer">
			Copyright &copy; 2019 Podmlotek.pl
		</div>
	</footer>

	@RenderSection("Scripts", required:false)

</body>
</html>