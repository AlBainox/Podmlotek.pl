@model Podmlotek.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


	<div>
		@using (Html.BeginForm("Register", "Account"))
		{
			@Html.AntiForgeryToken()
			<div id="login-error">
				@Html.ValidationMessage("loginerror", "")
				@Html.ValidationSummary()
			</div>
			<table class="table" style="margin-left:auto; margin-right:auto; ">
				<tr>
					<td>
						@Html.LabelFor(r => r.Email, "E-mail:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.Email)
						<div class="login-validation-message">
							@Html.ValidationMessageFor(r => r.Email)
						</div>
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.Password, "Hasło:")
					</td>
					<td>
						@Html.PasswordFor(r => r.Password)
						<div class="login-validation-message">
							@Html.ValidationMessageFor(r => r.Password)
						</div>
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.ConfirmPassword, "Potwierdź hasło:")
					</td>
					<td>
						@Html.PasswordFor(r => r.ConfirmPassword)
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.Name, "Imie:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.Name)
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.Surname, "Nazwisko:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.Surname)
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.Phone, "Nr telefonu:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.Phone)
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.Address, "Adres:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.Address)
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(r => r.PostalCode, "Kod pocztowy:")
					</td>
					<td>
						@Html.TextBoxFor(r => r.PostalCode)
					</td>
				</tr>
				<tr>
					<td></td>
					<td colspan="2">
						<input type="submit" value="Zarejestruj" class="orderButton" />
					</td>
				</tr>
			</table>
		}
	</div>
