@model Podmlotek.Models.Users
@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



	<div>
		@using (@Html.BeginForm("Login", "Account"))
		{
			@Html.AntiForgeryToken()

			<table class="table" style="margin-left:auto; margin-right:auto;">
				<tr>
					<td>
						@Html.LabelFor(o => o.Email, "E-mail:")
					</td>
					<td>
						@Html.TextBoxFor(o => o.Email)
						<div>
							@Html.ValidationMessageFor(o => o.Email)
						</div>
					</td>
				</tr>
				<tr>
					<td>
						@Html.LabelFor(o => o.Password, "Hasło:")
					</td>
					<td>
						@Html.PasswordFor(o => o.Password)
						<div>
							@Html.ValidationMessageFor(o => o.Password)
						</div>
					</td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<input type="submit" value="Zaloguj" class="orderButton" />
					</td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<div>
							<a href="@Url.Action("Register", "Account")" class="orderButton"> Nie mam jeszcze konta</a>
						</div>
					</td>
				</tr>
			</table>
		}
	</div>
