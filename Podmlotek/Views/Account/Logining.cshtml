@model Podmlotek.ViewModels.LoginViewModel
@{
	ViewBag.Title = "Logining";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

}

<div>
	@Html.AntiForgeryToken()

	<table style="margin-left:auto; margin-right:auto;">
		<tr>
			<td>
				@Html.LabelFor(o=>o.Email, "E-mail:")
			</td>
			<td>
				@Html.TextBoxFor(o=>o.Email)
				<div>
				@Html.ValidationMessageFor(o=>o.Email)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(o=>o.Password)
			</td>
			<td>
				@Html.PasswordFor(o=>o.Password)
				<div>
					@Html.ValidationMessageFor(o=>o.Password)
				</div>
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<input type="submit" value="Zaloguj" class="orderButton"/>
			</td>
		</tr>
	</table>
	<div>
		<a href="@Url.Action("Register","Account")"> Nie mam jeszcze konta</a>
	</div>
</div>
